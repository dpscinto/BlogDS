@model BlogDS.Models.Comment


<div class="container">
    
        <h2>Delete</h2>

        <h3>Are you sure you want to delete this comment?</h3>
        <div>
            <hr />
                    @Html.DisplayFor(model => model.Body)
            <br />

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color col-md-offset-5">
                    <input type="submit" value="Delete" class="btn btn-default" />
                    @Html.ActionLink("Cancel", "Details", "BlogPosts", new { slug = @Model.Post.Slug }, new { @class = "btn btn-default" })
                </div>
            }
      
    </div>
</div>