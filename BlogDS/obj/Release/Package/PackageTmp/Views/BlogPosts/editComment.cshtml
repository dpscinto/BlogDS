@model BlogDS.Models.Comment

@{
    ViewBag.Title = "Edit";
}

<div class="container">

        <h2>Edit</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Comment</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.PostId)


                <div class="form-group">
                    <div class="col-md-offset-1 col-md-10">
                        @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "form-control", rows = "5", id = "editor" } })
                        @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-md-offset-5 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                        @Html.ActionLink("Cancel", "Details", "BlogPosts", new { slug = @Model.Post.Slug }, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        }          
</div>

    @section Scripts {
        <script src="/Scripts/tinymce/tinymce.min.js"></script>
        <script src="/Scripts/tinymce/jquery.tinymce.min.js"></script>
        <script>
            $(document).ready(function () {
                $("#editor").tinymce({});
            });
        </script>
    }
